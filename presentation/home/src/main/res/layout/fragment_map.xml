<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <!-- 상단 헤더 -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:elevation="4dp">

            <!-- 제목 -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="양양 죽도해변"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center" />

        </LinearLayout>

        <!-- 지도 영역 -->
        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_layout">

            <com.kakao.vectormap.MapView
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <!-- 상단 탭 메뉴 -->
        <LinearLayout
            android:id="@+id/tab_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/tab_shop"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:background="@drawable/bg_tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="1.5dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:duplicateParentState="true"
                    android:src="@drawable/ic_shop"
                    app:tint="@color/tab_icon_tint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서핑샵"
                    android:textSize="14sp"
                    android:textColor="@color/tab_tint"
                    android:duplicateParentState="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_school"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1.1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="1.5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_school"
                    app:tint="@color/tab_icon_tint"
                    android:duplicateParentState="true"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서핑스쿨"
                    android:textSize="14sp"
                    android:textColor="@color/tab_tint"
                    android:duplicateParentState="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_tour"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_tab_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="1.5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tour"
                    app:tint="@color/tab_icon_tint"
                    android:duplicateParentState="true"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관광지"
                    android:textSize="14sp"
                    android:textColor="@color/tab_tint"
                    android:duplicateParentState="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- 우측 날씨 정보 플로팅 버튼들 -->
        <LinearLayout
            android:id="@+id/weather_info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tab_menu"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <!-- 수온 정보 -->
            <LinearLayout
                android:id="@+id/btn_water_temp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_weather_button"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_temp_water" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15°C"
                    android:textColor="@color/material_dynamic_neutral30"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 기온 정보 -->
            <LinearLayout
                android:id="@+id/btn_air_temp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_weather_button"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_temp_air"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21.3°C"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 자외선 정보 -->
            <LinearLayout
                android:id="@+id/btn_uv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_weather_button"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_uv"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강함"
                    android:textSize="10sp"
                    android:textColor="@color/material_dynamic_neutral30"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <com.capstone.surfingthegangwon.presentation.home.PlaceBottomSheetView
        android:id="@+id/placeBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="@string/bottom_sheet_behavior" />

    <include
        android:id="@+id/placeListSheet"
        layout="@layout/bottom_sheet_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_peekHeight="200dp"
        android:visibility="gone" />

    <include
        android:id="@+id/surfSchoolSheet"
        layout="@layout/bottom_sheet_surf_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_peekHeight="200dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>