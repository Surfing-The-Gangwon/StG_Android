<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="양양 죽도해변"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center" />

    </LinearLayout>

    <!-- 지도 영역 -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout">

        <com.kakao.vectormap.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- 상단 탭 메뉴 -->
    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/tab_shop"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:background="@drawable/bg_tab_selector"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:elevation="1.5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/shop"
                android:layout_marginEnd="4dp"
                app:tint="@color/tab_icon_tint"
                android:duplicateParentState="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서핑샵"
                android:textSize="14sp"
                android:textColor="@color/tab_tint"
                android:duplicateParentState="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_school"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_tab_selector"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:elevation="1.5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/school"
                app:tint="@color/tab_icon_tint"
                android:duplicateParentState="true"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서핑스쿨"
                android:textSize="14sp"
                android:textColor="@color/tab_tint"
                android:duplicateParentState="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_tour"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_tab_selector"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:elevation="1.5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/tour"
                app:tint="@color/tab_icon_tint"
                android:duplicateParentState="true"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관광지"
                android:textSize="14sp"
                android:textColor="@color/tab_tint"
                android:duplicateParentState="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_restaurant"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.9"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_tab_selector"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:elevation="1.5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/restaurant"
                app:tint="@color/tab_icon_tint"
                android:duplicateParentState="true"
                android:layout_marginEnd="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맛집"
                android:textSize="14sp"
                android:textColor="@color/tab_tint"
                android:duplicateParentState="true" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>