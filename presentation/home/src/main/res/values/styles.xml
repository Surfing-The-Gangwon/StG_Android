<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 평평한 툴바 -->
    <style name="Widget.Toolbar.Flat" parent="Widget.Material3.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleCentered">true</item>
    </style>

    <!-- 둥근 카드 모서리 -->
    <style name="Shape.Rounded2xl" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- 컬럼 헤더 텍스트 -->
    <style name="Forecast.ColumnHeader" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 셀 텍스트 -->
    <style name="Forecast.Cell" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 오전/오후 칩 -->
    <style name="Chip.Time" parent="Widget.Material3.Chip.Assist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipIconTint">@color/text_primary</item>
        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="shapeAppearance">@style/Shape.Rounded2xl</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="iconStartPadding">6dp</item>
        <item name="iconEndPadding">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>
</resources>
