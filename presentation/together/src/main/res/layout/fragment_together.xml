<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_gray"
        tools:context=".TogetherFragment">

        <com.capstone.surfingthegangwon.core.ui.CustomHeaderView
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.capstone.surfingthegangwon.core.ui.CustomHeaderView>

        <!-- 지역 선택 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shadow_rounded_background"
            android:paddingStart="25dp"
            android:paddingTop="25dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/headerView"
            tools:listitem="@layout/item_area" />

        <!-- 날짜 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerArea"
            tools:listitem="@layout/item_week_day" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@drawable/bottom_shadow"
            app:layout_constraintTop_toBottomOf="@id/recyclerArea" />

        <!-- 날짜 제목 및 좌우 화살표 -->
        <LinearLayout
            android:id="@+id/calenderControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shadow_rounded_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerWeek">

            <ImageView
                android:id="@+id/btnPrevWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/prev_arrow" />

            <TextView
                android:id="@+id/weekTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="2025년 7월 20일"
                android:textColor="@color/zinc_500"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/btnNextWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:src="@drawable/next_arrow" />
        </LinearLayout>

        <!-- 모임 아이템 리스트 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSession"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:paddingBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calenderControl"
            tools:listitem="@layout/item_session" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/bottom_shadow"
            app:layout_constraintTop_toBottomOf="@id/calenderControl" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="100dp"
        android:padding="15dp"
        android:src="@drawable/fab_icon"
        app:backgroundTint="@android:color/white"
        app:shapeAppearanceOverlay="@style/fab_3_rounded"
        app:tint="@color/blue_700"
        tools:ignore="ContentDescription" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>