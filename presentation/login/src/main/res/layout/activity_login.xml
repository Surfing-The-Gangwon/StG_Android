<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/titleSurfing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/exo_light"
        android:text="Surfing"
        android:textColor="@color/logo_start_color"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/verticalGuide"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleThe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/exo_light"
        android:text="the"
        android:textColor="@color/logo_start_color"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@id/verticalGuide"
        app:layout_constraintTop_toBottomOf="@id/titleSurfing" />

    <TextView
        android:id="@+id/titleGangwon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_light"
        android:text="Gangwon"
        android:textColor="@color/logo_end_color"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/verticalGuide"
        app:layout_constraintTop_toBottomOf="@id/titleThe" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/verticalGuide"
        app:layout_constraintTop_toTopOf="@id/titleThe"
        app:srcCompat="@drawable/logo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>