<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Blue.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_blue_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Gray.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_gray_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Stroke.Blue.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_stroke_blue_button_background</item>
        <item name="android:textColor">@color/blue_800</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
